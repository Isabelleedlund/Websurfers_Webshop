<%- include("./partial/header.ejs") %>


<div class="col-12 content slctn">
    <form action="/signup" class="col-12" method="POST">
        <h1 class="title">SIGN UP</h1>
        <p class="errorMessage"><%= errorMessage %></p>
        <div class="form-group">
            <input type="email" name="email" class="inputlong form-control" id="signUpEmail"
                placeholder="Email" />
        </div>
        <div class="form-group">
            <input type="password" name="password" class="inputlong form-control" id="signUpPassword"
                placeholder="Password" />
        </div>
        <p>By signing up you agree to our <a href="#" class="agreements">terms of use</a> and<a href="#" class="agreements"> privacy policy.</a> </p>
        <button type="submit" id="SignUpBtn" class="buttonblue">SIGN UP</button>
    </form>
</div>

